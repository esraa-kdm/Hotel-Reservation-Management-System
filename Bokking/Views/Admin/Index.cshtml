<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-line fa-3x "></i>
                <div class="ms-3">
                    <p class="mb-2">Customer Number</p>
                    <h6 class="mb-0">@ViewBag.NumOfCustomer</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-bar fa-3x "></i>
                <div class="ms-3">
                    <p class="mb-2">Hotels Number</p>
                    <h6 class="mb-0">@ViewBag.NumOfHotels</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-area fa-3x "></i>
                <div class="ms-3">
                    <p class="mb-2">AvailableRooms</p>
                    <h6 class="mb-0">@ViewBag.NumRoomAva</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-pie fa-3x "></i>
                <div class="ms-3">
                    <p class="mb-2">NotAvailableRooms</p>
                    <h6 class="mb-0">@ViewBag.NumRoomNotAva</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->
<!-- Sale & Revenue End -->
<!-- Sales Chart Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Vistores</h6>
                    <a style="color:#F0F8FF" href="">Show All</a>
                </div>
                <canvas id="worldwide-sales"></canvas>
            </div>
        </div>
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Booking & Revenue</h6>
                    <a style="color:#F0F8FF" href="">Show All</a>
                </div>
                <canvas id="salse-revenue"></canvas>
            </div>
        </div>
    </div>
</div>
<!-- Sales Chart End -->
<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Recent Salse</h6>
            <a  asp-action="Information" style="color:#F0F8FF" >Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"> Email</th>
                        <th scope="col"> User FirstName</th>
                        <th scope="col"> User LastName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.log)
                    {
                        <tr class="text-white">
                            <td>@item.Email</td>
                            <td>@item.Fname</td>
                            <td>@item.Lname</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">FeedBacks</h6>  
            <a asp-controller="Feedbacks" asp-action="Index"style="color:#F0F8FF">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"> Add</th>
                        <th scope="col"> Guest Name</th>
                        <th scope="col">Guest Email</th>
                        <th scope="col">Guest Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.feedPanding)
                    {
                        <tr>
                            <td><a asp-controller="Admin" asp-action="Approve" asp-route-id="@item.Id">Add</a></td>
                            <td>@item.Guestname</td>
                            <td>@item.Guestemail</td>
                            <td>@item.Guestmessage</td>
                           
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"> Add</th>
                        <th scope="col"> customer Message</th>
                        <th scope="col">customer ID</th>
                        <th scope="col">Hotel ID </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.testPanding)
                    {
                        <tr>
                            <td><a asp-controller="Admin" asp-action="Approve2" asp-route-id="@item.Id">Add</a></td>
                            <td>@item.Message</td>
                            <td>@item.Userid</td>
                            <td>@item.Hotelid</td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Recent Sales End -->
