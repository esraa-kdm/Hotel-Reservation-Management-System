<body>

    <h2 style="text-align:center;color:#6c757d;">Search Hotels</h2>

<form method="get" asp-controller="Hotels" asp-action="Search">
        <input type="text" name="searchString" placeholder="name or location" style="margin-left:500px;padding-right:300px ; border: 2px solid #fd7e14;
            border-radius: 15px;" width="100" height="50"/>
        <button type="submit" style="border-radius: 15px ;border: 2px solid #fd7e14 ;color:#fd7e14">Search</button>
</form>
<hr />

<table style="margin-left:200px;">
    <thead>
        <tr >
                <th style="padding-right:200px">Name</th>
                <th style ="padding-right:200px">Country</th>
                <th style="padding-right:200px">City</th>
                <th style="padding-right:200px">Contact Info</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
                <tr >
                    <td style="padding-right:200px ;padding-bottom:20px">@hotel.Hotelname</td>
                    <td style="padding-right:200px;padding-bottom:20px">@hotel.Country</td>
                    <td style="padding-right:200px;padding-bottom:20px">@hotel.City</td>
                    <td style="padding-right:200px;padding-bottom:20px">@hotel.Email</td>
            </tr>
        }
    </tbody>
</table>
    <footer class="section footer-section">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-3 mb-5">
                    <ul class="list-unstyled link">
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li><a href="#">Terms &amp; Conditions</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a asp-controller="Home" asp-action="Rooms">Rooms</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-5">
                    <ul class="list-unstyled link">
                        <li><a asp-controller="Home" asp-action="Rooms">The Rooms &amp; Suites</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li><a asp-controller="Feedbacks" asp-action="ContactUs">Contact Us</a></li>

                    </ul>
                </div>
                <div class="col-md-3 mb-5 pr-md-5 contact-info">
                    <!-- <li>198 West 21th Street, <br> Suite 721 New York NY 10016</li> -->
